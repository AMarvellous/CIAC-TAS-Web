@model adminlte.ASAConfiguracionService.ASAConfiguracionSet

@{
    ViewBag.Title = "ASAConfiguracionEditar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            ASA
            <small>Configuracion</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">ASAConfiguracion</a></li>
            <li class="active">Configuracion</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box box-primary">
            @using (Html.BeginForm())
            {
                <div class="box-header with-border">
                    <h3 class="box-title">CIAC TAS</h3>
                </div>
                <!-- /.box-header -->

                <!-- form start -->
                @*<form role="form">*@
                <div class="box-body">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.Label("Cantidad Preguntas")
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            @Html.EditorFor(model => model.ltASAConfiguracion[0].CantidadPregunta, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ltASAConfiguracion[0].CantidadPregunta, "", new { @class = "text-danger" })
                            @*<input type="number" class="form-control">*@
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.Label("Fecha")
                        <div class="input-group date">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.TextBox("FechaInicial", String.Format("{0:dd/MM/yyyy}", @Model.ltASAConfiguracion[0].FechaIni), new { @class = "form-control pull-right" })
                            @Html.ValidationMessage("FechaInicial", "", new { @class = "text-danger" })

                            @*<input type="text" class="form-control pull-right" id="datepicker">*@
                        </div>
                        <!-- /.input group -->
                    </div>


                    <div class="bootstrap-timepicker">
                        <div class="form-group">
                            @Html.Label("Hora Inicio")
                            <div class="input-group">
                                @*<input type="text" class="form-control timepicker">*@
                                @Html.TextBoxFor(model => model.ltASAConfiguracion[0].FechaIni, Model.ltASAConfiguracion[0].FechaIni.ToString("hh:mm tt", System.Globalization.CultureInfo.InvariantCulture), new { @class = "form-control timepicker" })
                                @Html.ValidationMessageFor(model => model.ltASAConfiguracion[0].FechaIni, "", new { @class = "text-danger" })
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                    </div>

                    <div class="bootstrap-timepicker">
                        <div class="form-group">
                            @Html.Label("Hora Fin")
                            <div class="input-group">
                                @*<input type="text" class="form-control timepicker">*@
                                @Html.TextBoxFor(model => model.ltASAConfiguracion[0].FechaFin, Model.ltASAConfiguracion[0].FechaFin.ToString("hh:mm tt", System.Globalization.CultureInfo.InvariantCulture), new { @class = "form-control timepicker" })
                                @Html.ValidationMessageFor(model => model.ltASAConfiguracion[0].FechaFin, "", new { @class = "text-danger" })
                                <div class="input-group-addon">
                                    <i class="fa fa-clock-o"></i>
                                </div>
                            </div>
                            <!-- /.input group -->
                        </div>
                        <!-- /.form group -->
                    </div>



                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary" onsubmit="onSubmitClick();">Submit</button>
                </div>
                @*</form>*@
            }
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts
{
    <script>
        $(document).ready(function () {

            //Date picker
            $('#FechaInicial').datepicker({
                autoclose: true,
                beforeShowDay: $.noop,
                calendarWeeks: false,
                clearBtn: false,
                daysOfWeekDisabled: [],
                endDate: Infinity,
                forceParse: true,
                format: 'dd/mm/yyyy',
                keyboardNavigation: true,
                language: 'es',
                minViewMode: 0,
                orientation: "bottom auto",
                rtl: false,
                startDate: -Infinity,
                startView: 2,
                todayBtn: false,
                todayHighlight: false,
                weekStart: 0

            })

            //Timepicker
            $('.timepicker').timepicker({
                showInputs: false
            })

            $("form").on('submit', function (e) {
                e.preventDefault();
                //var len = $('#username').val().length;
                //if (len < 6 && len > 1) {
                //    this.submit();
                //}
                console.log($("#ltASAConfiguracion_0__FechaIni").val())
                console.log($("#ltASAConfiguracion_0__FechaFin").val())
                let timeFrom = $("#ltASAConfiguracion_0__FechaIni").val(),
                    timeTo = $("#ltASAConfiguracion_0__FechaFin").val();

                if (!timeFrom || !timeTo) {
                    alert('Select time');
                    return
                }

                if (getTime(timeFrom) >= getTime(timeTo)) {
                    alert('timeFrom field must not greater than or equal to timeTo Field');
                } else {
                    alert('Time is valid')
                }

            });

        })


    </script>
}