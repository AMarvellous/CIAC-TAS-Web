
@model adminlte.ASAConfiguracionService.ASAConfiguracionLineaEntity



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ASA-Configuracion-Eliminar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="box-body">

            <div class="form-group">
                @Html.Label("Cantidad Preguntas")
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-list-ol"></i>
                    </div>
                    @Html.EditorFor(model => model.CantidadPregunta, new { htmlAttributes = new { @class = "form-control" , disabled = "disabled", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.CantidadPregunta, "", new { @class = "text-danger" })
                    @*<input type="number" class="form-control">*@
                </div>
                <!-- /.input group -->
            </div>

            <div class="form-group">
                @Html.Label("Fecha")
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    @*@Html.TextBox("FechaDoc", String.Format("{0:dd/MM/yyyy}", @Model.FechaDoc), new { @class = "form-control pull-right"  })*@
                    @*@Html.TextBoxFor(model => model.FechaDoc, Model.FechaIni.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture), new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })*@
                    @Html.Label(String.Format("{0:dd/MM/yyyy}", @Model.FechaDoc), new { @class = "form-control" })
                    @Html.ValidationMessage("FechaDoc", "", new { @class = "text-danger" })

                    @*<input type="text" class="form-control pull-right" id="datepicker">*@
                </div>
                <!-- /.input group -->
            </div>


            <div class="bootstrap-timepicker">
                <div class="form-group">
                    @Html.Label("Hora Inicio")
                    <div class="input-group">
                        @*<input type="text" class="form-control timepicker">*@
                        @Html.TextBoxFor(model => model.FechaIni, Model.FechaIni.ToString("hh:mm tt", System.Globalization.CultureInfo.InvariantCulture), new { @class = "form-control timepicker" ,disabled = "disabled", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.FechaIni, "", new { @class = "text-danger" })
                        <div class="input-group-addon">
                            <i class="fa fa-clock-o"></i>
                        </div>
                    </div>
                    <!-- /.input group -->
                </div>
                <!-- /.form group -->
            </div>

            <div class="bootstrap-timepicker">
                <div class="form-group">
                    @Html.Label("Hora Fin")
                    <div class="input-group">
                        @*<input type="text" class="form-control timepicker">*@
                        @Html.TextBoxFor(model => model.FechaFin, Model.FechaFin.ToString("hh:mm tt", System.Globalization.CultureInfo.InvariantCulture), new { @class = "form-control timepicker" , disabled = "disabled", @readonly = "readonly" })
                        @Html.ValidationMessageFor(model => model.FechaFin, "", new { @class = "text-danger" })
                        <div class="input-group-addon">
                            <i class="fa fa-clock-o"></i>
                        </div>
                    </div>
                    <!-- /.input group -->
                </div>
                <!-- /.form group -->
            </div>

        </div>

        <div class="modal-footer">
            <span id="progress" class="text-center" style="display: none;">

                Wait..
            </span>

            <input class="btn btn-primary" type="submit" value="Aceptar" />
            <button class="btn btn-warning" data-dismiss="modal" style="">
                Cerrar
            </button>
        </div>

    </div>
}

