@model List<adminlte.Classes.ASATransaccionReporte>

@{
    ViewBag.Title = "ASACuestionarioDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(Model, // source
                                null, // columnNames
                                null, // defaultSort
                                999,   // rowsPerPage
                                true, // canPage
                                true, // canSort
                                null, // ajaxUpdateContainerId
                                null, // ajaxUpdateCallback
                                null, // fieldNamePrefix
                                null, // pageFieldName
                                null, // selectionFieldName
                                null, // sortFieldName
                                null);// sortDirectionFieldName
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            ASA
            <small>Examen</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">Cuestionario</a></li>
            <li class="active">Detalle</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box box-primary">

            <div class="box-header with-border">
                <h3 class="box-title">CIAC TAS</h3>
            </div>
            <!-- /.box-header -->

            <div class="col-sm-1">
                @Html.ActionLink(" ", "ASACuestionarioGrafica", new { Estudiante = @ViewBag.Estudiante, Intento = ViewBag.Intento, EsEstudiante = @ViewBag.EsEstudiante }, new { @class = "glyphicon glyphicon-circle-arrow-left ", style = "font-size:28px;" })
            </div>
            <div class="col-sm-12">
                <h3>PREGUNTAS ERRONEAS</h3>
            </div>
            <!-- form start -->
            @*<form role="form">*@
            <div class="box-body table-responsive">

                @grid.GetHtml(
                            tableStyle: "table table-bordered",
                            htmlAttributes: new { id = "ASACuestionarioPadre"},
                            headerStyle: "header",
                            alternatingRowStyle: "alt",
                            //tableStyle: "gridtable",
                            //headerStyle: "gridtable-header",
                            //alternatingRowStyle: "gridtable-alt",
                            footerStyle: "table-pager-footer",
                            columns: new[] {
                                //grid.Column("TipoDoc"),
                               // grid.Column("SubCompania"),
                                grid.Column("NroPregunta"),
                                grid.Column("PreguntaEnunciado"),
                                //grid.Column("RespuestaId"),
                                //grid.Column("Correcto","",format: @<text> @(item.Correcto ? "Correcto" : "Incorrecto")</text>),
                                grid.Column("GrupoPregunta","Grupo"),
                                grid.Column("",
                                        header:"Acciones",
                                        format:@<text>
            @Html.ActionLink(" ", "ASATransaccionReporteDetalle", new { EstudianteCI=item.EstudianteCI, Intento=item.Intento, NroPregunta = item.NroPregunta, OpcionUsuario = item.Opcion },new {data_modal = "", @class = "glyphicon glyphicon-th",style = "font-size:15px;"})
                                        </text> )

                                                                                                                                                                                })
            </div>
            <!-- /.box-body -->
            @*</form>*@

        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content" style="padding-top:2%;">
            <div id='myModalContent' style="padding-left:5%;"></div>
        </div>
    </div>
</div>
<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script src="~/Scripts/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/Scripts/adminlte/js/modal.js"></script>

<style>

    .table-pager-footer > td {
        padding-top: 10px;
    }

        .table-pager-footer > td > a {
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 3px 7px;
        }

            .table-pager-footer > td > a:hover {
                background-color: #f0f0f0;
            }
</style>
