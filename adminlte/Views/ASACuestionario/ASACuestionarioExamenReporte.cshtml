
@model IEnumerable<adminlte.ASAConfiguracionService.ASAConfiguracionLineaEntity>

@{
    ViewBag.Title = "ASACuestionarioExamenReporte";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(Model, // source
                                null, // columnNames
                                null, // defaultSort
                                25,   // rowsPerPage
                                true, // canPage
                                true, // canSort
                                null, // ajaxUpdateContainerId
                                null, // ajaxUpdateCallback
                                null, // fieldNamePrefix
                                null, // pageFieldName
                                null, // selectionFieldName
                                null, // sortFieldName
                                null);// sortDirectionFieldName
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            ASA
            <small>Examen</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
            <li><a href="#">Examen Reporte</a></li>
            <li class="active">Reporte Estudiantes</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box box-primary">

            <div class="box-header with-border">
                <h3 class="box-title">CIAC TAS</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @*<form role="form">*@
            <div class="box-body">
                @grid.GetHtml(
                        tableStyle: "table table-bordered",
                        headerStyle: "header",
                        alternatingRowStyle: "alt",
                        //tableStyle: "gridtable",
                        //headerStyle: "gridtable-header",
                        //alternatingRowStyle: "gridtable-alt",
                        footerStyle: "table-pager-footer",
                        columns: new[] {
                            //grid.Column("TipoDoc"),
                           // grid.Column("SubCompania"),
                            grid.Column("Grupo"),
                            grid.Column("FechaIni","Fecha Inicio",format: (item) => string.Format("{0:dd/MM/yyyy hh:mm tt}", item.FechaIni)),
                            grid.Column("FechaFin","Fecha Fin",format: (item) => string.Format("{0:dd/MM/yyyy hh:mm tt}", item.FechaFin)),
                            //grid.Column("GrupoPregunta"),
                            //grid.Column("ClaseOri"),
                            //grid.Column("Estado"),


                            grid.Column("",
                                        header:"Acciones",
                                        format:@<text>
        @Html.ActionLink(" ", "ASACuestionarioReporteExamenDescargar", new { Grupo=item.Grupo, FechaIni=item.FechaIni,FechaFin=item.FechaFin },new {@class = "glyphicon glyphicon-download-alt",style = "font-size:15px;"})
                                        </text>
                                                                                )
                                                                                 })



            </div>
            <!-- /.box-body -->
            @*</form>*@

        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<style>

    .table-pager-footer > td {
        padding-top: 10px;
    }

        .table-pager-footer > td > a {
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 3px 7px;
        }

            .table-pager-footer > td > a:hover {
                background-color: #f0f0f0;
            }
</style>
