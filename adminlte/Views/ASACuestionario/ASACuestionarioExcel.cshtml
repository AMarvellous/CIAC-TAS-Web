
@{
    ViewBag.Title = "ASACuestionarioExcel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Preguntas ASA
            <small>Excel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">ASACuestionario</a></li>
            <li class="active">Excel</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div id="msjContainer"></div>
                    <div class="box-header with-border">
                        <h3 class="box-title">Excel ASA</h3>
                    </div>
                    <!-- /.box-header -->

                    <div class="col-sm-12">
                        @Html.ActionLink(" ", "ASACuestionarioPregunta", null, new { @class = "glyphicon glyphicon-circle-arrow-left ", style = "font-size:28px;" })
                    </div>
                    <!-- form start -->
                    <form action="@Url.Action("ASACuestionarioExcel","ASACuestionario")" method="post" role="form" enctype="multipart/form-data">
                        <div class="box-body">

                            <div class="form-group">
                                <label for="GrupoPregunta">Grupo</label>
                                @Html.DropDownList("GrupoPregunta", new SelectList(@ViewBag.ltSelect as System.Collections.IEnumerable), "Seleccione el Grupo", new { @class = "form-control" })
                                @*<p class="help-block">Seleccione el Grupo</p>*@
                            </div>

                            <div class="form-group">
                                <label for="exampleInputFile">Entrada de Archivo</label>
                                <input type="file" name="FileUpload" id="exampleInputFile" accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                                <p class="help-block">Seleccione el archivo excel de preguntas ASA</p>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Actualizar</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- jQuery 3 -->
<script src="~/Scripts/adminlte/components/jquery/dist/jquery.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="~/Scripts/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>

<script src="~/Scripts/adminlte/js/adminlte.min.js"></script>
<script type="text/javascript">

     $(document).ready(function () {
        var MensajeError = '@ViewBag.MensajeError';
        if (MensajeError != null ) {
            if (MensajeError != "") {
                muestraMesanje(3,MensajeError);
            }
        }

    });

    function muestraMesanje(tipo, msj) {

        $("#msjContainer").html('');

        if (tipo == 1) {
            $("#msjContainer").append('<div class="alert alert-success alert-dismissable fade in"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>&nbsp;<strong>Operacion realizada exitosamente.</strong>&nbsp;' + msj + '</div>')
        } else if (tipo == 2) {
            $("#msjContainer").append('<div class="alert alert-danger alert-dismissable fade in"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp;<strong>Error:</strong>' + msj + '</div>')
        } else if (tipo == 3) {
            $("#msjContainer").append('<div class="alert alert-warning alert-dismissable fade in"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>&nbsp;<strong>Atencion:&nbsp;</strong>' + msj + '</div>')
        }

    }
</script>
