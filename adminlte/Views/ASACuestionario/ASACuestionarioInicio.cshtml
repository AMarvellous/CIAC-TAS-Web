
@{
    ViewBag.Title = "ASACuestionarioInicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Preguntas ASA
            <small>Cuestionario preguntas ASA</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Cuestionario</a></li>
            <li class="active">Preguntas ASA</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Cuestionario</h3>
                <div class="box-tools pull-right">
                    @*<button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                                title="Collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                                <i class="fa fa-times"></i>
                            </button>*@
                </div>
            </div>
            <div class="box-body">
                <form action="@Url.Action("ASACuestionarioInicio","ASACuestionario")" method="post">
                    <div class="col-xs-12 text-center form-group">
                        @Html.DropDownList("Cuestionario", (SelectList)@ViewBag.ltSelect, "Seleccione el Cuestionario", new { @class = "form-control" })
                    </div>

                    @if(!ViewBag.ExisteASA)
                    {
                    <div class="col-xs-12 text-center form-group">
                        @Html.DropDownList("GrupoPregunta", new SelectList(@ViewBag.ltASAGrupoPregunta as System.Collections.IEnumerable), new { @class = "form-control select2", @multiple = "multiple", @placeholder = "Seleccione los Grupos" })
                    </div>
                    }
                    

                    <div class="col-xs-12 text-center">
                        <button name="inicioCuestionario" type="submit" class="btn btn-default btn-default">Iniciar Cuestionario</button>
                    </div>
                </form>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">

            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- jQuery 3 -->
<script src="~/Scripts/adminlte/components/jquery/dist/jquery.js"></script>
<!-- Bootstrap 3.3.7 -->
<script src="~/Scripts/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>

<script src="~/Scripts/adminlte/js/adminlte.min.js"></script>


@section Scripts
{
    <script>
        $(document).ready(function () {
            //Initialize Select2 Elements
            $('.select2').select2()
            
        })
    </script>
}



