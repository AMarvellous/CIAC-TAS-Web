
@model IEnumerable<adminlte.ASAPreguntaService.ASAPreguntaEntity>

@{
    ViewBag.Title = "ASAPreguntaBancoPregunta";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(Model, // source
                                null, // columnNames
                                "NroPregunta", // defaultSort
                                ViewBag.NumPreguntas,   // rowsPerPage
                                true, // canPage
                                true, // canSort
                                null, // ajaxUpdateContainerId
                                null, // ajaxUpdateCallback
                                null, // fieldNamePrefix
                                null, // pageFieldName
                                null, // selectionFieldName
                                null, // sortFieldName
                                null);// sortDirectionFieldName
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            ASA
            <small>Preguntas</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">ASAPregunta</a></li>
            <li class="active">Preguntas</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box box-primary">

            <div class="box-header with-border">
                <h3 class="box-title">CIAC TAS</h3>
            </div>
            <!-- /.box-header -->

            <div class="form-group">
                @Html.Label("Excel Banco Preguntas")
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-file-excel-o"></i>
                    </div>

                    @*@Html.TextBox("AIRFRAME", null, new { @class = "form-control", @readonly = "readonly" })*@
                    @Html.ActionLink("Airframe", "ASACuestionarioDescargarBancoPregunta", new { Archivo = "AIRFRAME" }, new { @class = "glyphicon glyphicon-download-alt", style = "font-size:18px;" }) | 
                    @*@Html.TextBox("GENERAL", null, new { @class = "form-control", @readonly = "readonly" })*@
                    @Html.ActionLink("General", "ASACuestionarioDescargarBancoPregunta", new { Archivo = "GENERAL" }, new { @class = "glyphicon glyphicon-download-alt", style = "font-size:18px;" }) | 
                    @*@Html.TextBox("POWERPLANT", null, new { @class = "form-control", @readonly = "readonly" })*@
                    @Html.ActionLink("Powerplant", "ASACuestionarioDescargarBancoPregunta", new { Archivo = "POWERPLANT" }, new { @class = "glyphicon glyphicon-download-alt", style = "font-size:18px;" })

                </div>
                <!-- /.input group -->
            </div>

            <!-- form start -->
            @*<form role="form">*@
            <div class="box-body table-responsive">
                <br />
                @grid.GetHtml(
                        tableStyle: "table table-bordered",
                        headerStyle: "header",
                        alternatingRowStyle: "alt",
                        //tableStyle: "gridtable",
                        //headerStyle: "gridtable-header",
                        //alternatingRowStyle: "gridtable-alt",
                        footerStyle: "table-pager-footer",
                        columns: new[] {
                            //grid.Column("TipoDoc"),
                           // grid.Column("SubCompania"),
                            grid.Column("NroPregunta"),
                            grid.Column("Pregunta"),
                            grid.Column("GrupoPregunta")
                            //grid.Column("ClaseOri"),
                            //grid.Column("Estado"),
                            })



            </div>
            <!-- /.box-body -->
            @*</form>*@

        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<style>

    .table-pager-footer > td {
        padding-top: 10px;
    }

        .table-pager-footer > td > a {
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 3px 7px;
        }

            .table-pager-footer > td > a:hover {
                background-color: #f0f0f0;
            }
</style>
