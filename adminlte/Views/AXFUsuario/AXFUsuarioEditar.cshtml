
@model adminlte.AXFUsuarioService.AXFUsuarioSet

@{
    ViewBag.Title = "AXFUsuarioEditar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Sistema
            <small>Usuario</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Usuario</a></li>
            <li class="active">Edicion</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box box-primary">
            <div id="msjContainer"></div>
            <form action="@Url.Action("AXFUsuarioEditar","AXFUsuario")" method="post" role="form" enctype="multipart/form-data">

                <div class="box-header with-border">
                    <h3 class="box-title">CIAC TAS</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @*<form role="form">*@
                <div class="box-body">

                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @*@Html.Label("Cantidad Preguntas")*@
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-users"> @Html.Label(Model.ltAXFUsuario[0].Usuario, new { htmlAttributes = new { @class = "form-control" } })</i>
                            </div>

                            @*@Html.ValidationMessageFor(model => model.ltAXFUsuario[0].CantidadPregunta, "", new { @class = "text-danger" })*@
                            @*<input type="number" class="form-control">*@
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.Label("Nombre")
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-bars"></i>
                            </div>
                            @Html.TextBoxFor(model => model.ltAXFUsuario[0].Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ltAXFUsuario[0].Nombre, "", new { @class = "text-danger" })
                            @*<input type="number" class="form-control">*@
                        </div>
                        <!-- /.input group -->
                    </div>



                    <div class="form-group">
                        @Html.Label("Correo Electronico")
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-envelope"></i>
                            </div>
                            @*@Html.EditorFor(model => model.ltAXFUsuario[0].Grupo, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.TextBoxFor(model => model.ltAXFUsuario[0].CorreoElectronico, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ltAXFUsuario[0].CorreoElectronico, "", new { @class = "text-danger" })
                            @*<input type="number" class="form-control">*@
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.Label("Telefono")
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-phone"></i>
                            </div>
                            @*@Html.EditorFor(model => model.ltAXFUsuario[0].Grupo, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.TextBoxFor(model => model.ltAXFUsuario[0].Telefono1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ltAXFUsuario[0].Telefono1, "", new { @class = "text-danger" })
                            @*<input type="number" class="form-control">*@
                        </div>
                        <!-- /.input group -->
                    </div>

                    <div class="form-group">
                        @Html.Label("Clave")
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-lock"></i>
                            </div>
                            @*@Html.EditorFor(model => model.ltAXFUsuario[0].Grupo, new { htmlAttributes = new { @class = "form-control" } })*@
                            @Html.TextBoxFor(model => model.ltAXFUsuario[0].Clave, new { @class = "form-control", Type = "password" })
                            @Html.ValidationMessageFor(model => model.ltAXFUsuario[0].Clave, "", new { @class = "text-danger" })
                            @*<input type="number" class="form-control">*@
                        </div>
                        <!-- /.input group -->
                    </div>

                    @{
                        if ((bool)ViewBag.ExisteImagen)
                        {
                            <div class="item">
                                <img style="width: 300px; height: 300px;" src="@Url.Content(String.Format("~//Uploads/Imagenes/AXFUsuario/{0}", (string)ViewBag.PathImagen))" />
                            </div>
                        }
                        else
                        {
                            <div class="form-group">
                                <label for="exampleInputFile">Entrada de Archivo</label>
                                <input type="file" name="FileUpload" id="exampleInputFile" accept="image/*">
                                <p class="help-block">Seleccione el archivo</p>
                            </div>
                        }


                    }
                    <br /><br />

                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

            </form>

        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content" style="padding-top:2%;">
            <div id='myModalContent' style="padding-left:5%;"></div>
        </div>
    </div>
</div>

@*@Scripts.Render("~/Scripts/adminlte/js/modal.js")*@
<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script src="~/Scripts/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/Scripts/adminlte/js/modal.js"></script>



@section scripts
{

    <script type="text/javascript">

     $(document).ready(function () {
        var MensajeError = '@ViewBag.MensajeError';
        if (MensajeError != null ) {
            if (MensajeError != "") {
                muestraMesanje(3,MensajeError);
            }
        }

    });

    function muestraMesanje(tipo, msj) {

        $("#msjContainer").html('');

        if (tipo == 1) {
            $("#msjContainer").append('<div class="alert alert-success alert-dismissable fade in"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>&nbsp;<strong>Operacion realizada exitosamente.</strong>&nbsp;' + msj + '</div>')
        } else if (tipo == 2) {
            $("#msjContainer").append('<div class="alert alert-danger alert-dismissable fade in"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>&nbsp;<strong>Error:</strong>' + msj + '</div>')
        } else if (tipo == 3) {
            $("#msjContainer").append('<div class="alert alert-warning alert-dismissable fade in"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>&nbsp;<strong>Atencion:&nbsp;</strong>' + msj + '</div>')
        }

    }
    </script>

}
