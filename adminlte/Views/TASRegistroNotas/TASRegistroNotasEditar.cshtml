@model IEnumerable<adminlte.TASEstudianteMateriasAsignacionService.TASEstudianteMateriasAsignacionEntity>

@{
    ViewBag.Title = "TASRegistroNotasEditar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(Model, // source
                                null, // columnNames
                                "Texto0", // defaultSort
                                25,   // rowsPerPage
                                true, // canPage
                                true, // canSort
                                null, // ajaxUpdateContainerId
                                null, // ajaxUpdateCallback
                                null, // fieldNamePrefix
                                null, // pageFieldName
                                null, // selectionFieldName
                                null, // sortFieldName
                                null);// sortDirectionFieldName
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            TAS
            <small>Registro Notas</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Registro Notas</a></li>
            <li class="active">Estudiantes</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box box-primary">

            <div class="box-header with-border">
                <h3 class="box-title">CIAC TAS</h3>
            </div>
            <!-- /.box-header -->
            <div class="col-sm-12">
                @Html.ActionLink(" ", "TASRegistroNotasLista", null, new { @class = "glyphicon glyphicon-circle-arrow-left ", style = "font-size:28px;" })
            </div>

            <div class="form-group">
                @Html.Label("Programa")
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-archive"></i>
                    </div>
                    @Html.TextBox("Programa", (string)ViewBag.Programa, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })                    
                </div>
                <!-- /.input group -->
            </div>

            <div class="form-group">
                @Html.Label("Grupo")
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-group"></i>
                    </div>
                    @Html.TextBox("Grupo", (string)ViewBag.Grupo, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                </div>
                <!-- /.input group -->
            </div>


            <div class="form-group">
                @Html.Label("Materia")
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-book"></i>
                    </div>
                    @Html.TextBox("Materia", (string)ViewBag.Materia, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                </div>
                <!-- /.input group -->
            </div>

            <div class="form-group">
                @Html.Label("ModuloMateria")
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-newspaper-o"></i>
                    </div>
                    @Html.TextBox("ModuloMateria", (string)ViewBag.ModuloMateria, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                </div>
                <!-- /.input group -->
            </div>

            <div class="form-group">
                @Html.Label("Gestion")
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    @Html.TextBox("Gestion", (string)ViewBag.Gestion, new { @class = "form-control", disabled = "disabled", @readonly = "readonly" })
                </div>
                <!-- /.input group -->
            </div>

            <!-- form start -->
            @*<form role="form">*@
            <div class="box-body table-responsive">

                @grid.GetHtml(
                        tableStyle: "table table-bordered",
                        headerStyle: "header",
                        alternatingRowStyle: "alt",
                        //tableStyle: "gridtable",
                        //headerStyle: "gridtable-header",
                        //alternatingRowStyle: "gridtable-alt",
                        footerStyle: "table-pager-footer",
                        columns: new[] {
                            //grid.Column("TipoDoc"),
                           // grid.Column("SubCompania"),
                            grid.Column("EstudianteCI", "C.I."),
                            grid.Column("Texto0", "Nombre Estudiante"),

                            grid.Column("",
                                        header:"Acciones",
                                        format:@<text>
        @Html.ActionLink(" ", "TASRegistroNotasEstudianteEditar", new {NombreEstudiante = item.Texto0,EstudianteCI = item.EstudianteCI , SubCompania= item.SubCompania, Programa= item.Programa,Grupo= item.Grupo,Materia= item.Materia,ModuloMateria= item.ModuloMateria,Gestion= item.Gestion},new {data_modal = "",@class = "glyphicon glyphicon-edit ",style = "font-size:15px;"})
                                        </text>
                                                                                                                        )
                                                                                                           })
            </div>
            <!-- /.box-body -->
            @*</form>*@

        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content" style="padding-top:2%;">
            <div id='myModalContent' style="padding-left:5%;"></div>
        </div>
    </div>
</div>
<script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
<script src="~/Scripts/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/Scripts/adminlte/js/modal.js"></script>

