
@model IEnumerable<adminlte.TASRegistroNotasService.TASRegistroNotasEntity>

@{
    ViewBag.Title = "TASRegistroNotasLista";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebGrid grid = new WebGrid(Model, // source
                                null, // columnNames
                                "Grupo", // defaultSort
                                20,   // rowsPerPage
                                true, // canPage
                                true, // canSort
                                null, // ajaxUpdateContainerId
                                null, // ajaxUpdateCallback
                                null, // fieldNamePrefix
                                null, // pageFieldName
                                null, // selectionFieldName
                                null, // sortFieldName
                                null);// sortDirectionFieldName

   
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            TAS
            <small>Registro Notas</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Registro Notas</a></li>
            <li class="active">Estudiantes</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box box-primary">

            <div class="box-header with-border">
                <h3 class="box-title">CIAC TAS</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @*<form role="form">*@
            <div class="box-body table-responsive">
                <h4>Registro de Notas</h4>

                <p>
                    @Html.ActionLink(" ", "TASRegistroNotasNuevo", null, new { @class = "glyphicon glyphicon-plus ", style = "font-size:20px;" })
                </p>
                <br />

                @grid.GetHtml(
                        tableStyle: "table table-bordered",
                        headerStyle: "header",
                        alternatingRowStyle: "alt",
                        //tableStyle: "gridtable",
                        //headerStyle: "gridtable-header",
                        //alternatingRowStyle: "gridtable-alt",
                        footerStyle: "table-pager-footer",
                        columns: new[] {
                            //grid.Column("TipoDoc"),
                           // grid.Column("SubCompania"),
                            grid.Column("Programa"),
                            grid.Column("Grupo"),
                            grid.Column("Materia"),
                            grid.Column("ModuloMateria"),
                            grid.Column("Gestion"),

                            grid.Column("",
                                        header:"Acciones",
                                        format:@<text>
                @Html.ActionLink(" ", "TASRegistroNotasEditar", new { SubCompania=item.SubCompania, Programa=item.Programa, Grupo=item.Grupo, Materia=item.Materia, ModuloMateria=item.ModuloMateria, Gestion=item.Gestion },new {@class = "glyphicon glyphicon-edit",style = "font-size:15px;"})|
                @Html.ActionLink(" ", "TASRegistroNotasEliminar", new { SubCompania=item.SubCompania, Programa=item.Programa, Grupo=item.Grupo, Materia=item.Materia, ModuloMateria=item.ModuloMateria, Gestion=item.Gestion },new {@class = "glyphicon glyphicon-remove",style = "font-size:15px;color:red"})
                                        </text>
                                                                                                                         )
                                                                                                          })


                <br />
                <br />


            </div>
            <!-- /.box-body -->
            @*</form>*@

        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<style>

    .table-pager-footer > td {
        padding-top: 10px;
    }

        .table-pager-footer > td > a {
            background-color: #f5f5f5;
            border: 1px solid #ccc;
            border-radius: 3px;
            padding: 3px 7px;
        }

            .table-pager-footer > td > a:hover {
                background-color: #f0f0f0;
            }
</style>
